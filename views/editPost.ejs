<%- include("./includes/head") %>
<section class="mx-auto">
  <a href="/">Go back</a>
  <h1 class="title">Edit your post here!</h1>
  <form action="/admin/post-edit/" method="post">
    <input type="text" name="postId" value="<%= post.id %>" hidden />
    <div>
      <label for="title">Enter title</label>
      <input
        type="text"
        id="title"
        name="title"
        required
        value="<%= post.title %>"
      />
    </div>
    <div>
      <label for="photo">Enter photo</label>
      <input id="photo" name="photo" required value="<%= post.photo %>" />
    </div>
    <div>
      <label for="description">Enter your description</label>
      <input
        name="description"
        id="description"
        cols="30"
        rows="10"
        value="<%= post.description %>"
      >
      
    </input>
    </div>
    <button>Update Post</button>
  </form>
</section>
<%- include("./includes/foot") %>
